<!-- TITLE START -->
<div class="container" id="title">
  <h2 class="text-center">SMART PLANT MONITORING SYSTEM</h2>
  <p class="text-center">
    Take care of a tree today, save a life for tomorrow
  </p>
</div>
<!-- TITLE START -->

<!-- CONTENT START -->
<div class="container-fluid" id="content">
  <div class="d-flex justify-content-end header-title-content">
    <p>
      <span id="dateContent"></span>
      <img
        src="./icons/calendar_month.png"
        alt=""
        width="25"
        height="25"
      />
    </p>
  </div>
  <div class="d-flex justify-content-evenly" id="main-metrik">
    <div class="d-flex justify-content-around" id="metrik-text">
      <div id="suhu-udara" class="card" style="width: 12rem">
        <div class="d-flex justify-content-end card-header">
          <img src="./icons/suhu_udara.png" alt="" />
        </div>
        <div class="card-body">
          <p class="card-text text-center fs-6" id="valueSuhuUdara"></p>
          <p class="card-text text-center fs-6">Suhu Udara</p>
        </div>
      </div>

      <div id="kelembapan-tanah" class="card" style="width: 12rem">
        <div class="d-flex justify-content-end card-header">
          <img src="./icons/kelembapan_tanah.png" alt="" />
        </div>
        <div class="card-body">
          <p class="card-text text-center fs-6" id="valueKelembapan"></p>
          <p class="card-text text-center fs-6">Kelembapan Tanah</p>
        </div>
      </div>

      <div id="penyiraman-air" class="card" style="width: 12rem">
        <div class="d-flex justify-content-end card-header">
          <img src="./icons/total_penyiraman.png" alt="" />
        </div>
        <div class="card-body">
          <p class="card-text text-center fs-6" id="valuePenyiraman"></p>
          <p class="card-text text-center fs-6">Total Penyiraman</p>
        </div>
      </div>
    </div>
    <div id="grafik" class="card" style="width: 45rem">
      <div class="d-flex justify-content-center card-header">
        <h2 class="text-white text-center">ANALYTICS</h2>
      </div>
      <div class="d-flex justify-content-around" id="chart-button">
        <button
          class="btn btn-light btn-sm text-black"
          id="b-suhu-udara"
          value="Suhu Udara"
        >
          Suhu Udara
        </button>
        <button
          class="btn btn-light btn-sm text-black"
          id="b-kelembapan-tanah"
          value="Kelembapan Tanah"
        >
          Kelembapan Tanah
        </button>
        <button
          class="btn btn-light btn-sm text-black"
          id="b-total-penyiraman"
          value="Total Penyiraman"
        >
          Total Penyiraman
        </button>
        <div class="btn-group">
          <button
            type="button"
            class="btn btn-light dropdown-toggle text-black"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Show by
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Hari</a></li>
            <li><a class="dropdown-item" href="#">Minggu</a></li>
            <li><a class="dropdown-item" href="#">Bulan</a></li>
            <li><a class="dropdown-item" href="#">Tahun</a></li>
          </ul>
        </div>
      </div>
      <div class="card-body">
        <h3 class="text-center" id="titleChart"></h3>
        <canvas id="canvas-chart"></canvas>
      </div>
    </div>
  </div>
</div>
<!-- CONTENT END -->
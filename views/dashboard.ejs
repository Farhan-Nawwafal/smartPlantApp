<!-- TITLE START -->
<div class="container" id="title">
  <h2 class="text-center">SMART PLANT MONITORING SYSTEM</h2>
  <p class="text-center">Take care of a tree today, save a life for tomorrow</p>
</div>
<!-- TITLE START -->

<!-- CONTENT START -->
<div class="container-fluid" id="content">
  <!-- FLEXBOX TITLE START -->
  <div class="d-flex justify-content-end header-title-content">
    <p id="date">
      <span id="dateContent"></span>
      <img src="./icons/calendar_month.png" alt="" width="25" height="25" />
    </p>
  </div>
  <!-- FLEXBOX TITLE END -->
  <!-- FLEXBOX BETWEEN METRICS AND GRAPH START -->
  <div class="d-flex justify-content-evenly" id="main-metrik">
    <!-- FLEXBOX METRICS TEXT START -->
    <div class="d-flex justify-content-around" id="metrik-text">
      <div id="penyiraman-air" class="card" style="width: 12rem">
        <div class="card-body metrik">
          <h5 class="card-title text-center">
            <img src="./icons/total_penyiraman.png" alt="" />
          </h5>
          <p class="card-text text-center">
            <% if (datas && datas.length > 0) { %> 
              <%= datas[0].jumlah_penyiraman %>x 
            <% } else { %> 
                Data penyiraman belum tersedia. 
            <% } %>
          </p>
          <p class="card-text text-center">Total Watering Today</p>
        </div>
      </div>

      <div id="kelembapan-tanah" class="card" style="width: 12rem">
        <div class="card-body metrik">
          <h5 class="card-title text-center">
            <img src="./icons/kelembapan_tanah.png" alt="" />
          </h5>
          <p class="card-text text-center">
            <% if (datas && datas.length > 0) { %> 
              <%= datas[0].kelembapan_terbaru %> cb 
            <% } else { %> 
              Data kelembapan tanah belum tersedia. 
            <% } %>
          </p>
          <p class="card-text text-center">Current Soil Moisture</p>
        </div>
      </div>

      <div class="card" id="suhu-udara" style="width: 12rem">
        <div class="card-body metrik">
          <h5 class="card-title text-center">
            <img src="./icons/suhu_udara.png" alt="" />
          </h5>
          <p class="card-text text-center">
            <% if (datas && datas.length > 0) { %> 
              <%= datas[0].suhu_terbaru %>Â°C 
            <% } else { %> 
              Data suhu udara belum tersedia. 
            <% } %>
          </p>
          <p class="card-text text-center">Current Temperature</p>
        </div>
      </div>
      <!-- FLEXBOX METRICS TEXT END -->
    </div>
    <!-- FLEXBOX BETWEEN METRICS AND GRAPH END -->

    <div id="grafik" class="card rounded" style="width: 45rem">
      <div class="d-flex justify-content-center">
        <h2 class="text-white text-center">ANALYTICS</h2>
      </div>
      <div class="d-flex justify-content-around" id="chart-button">
        <button
          class="btn btn-light btn-sm text-black"
          id="b-suhu-udara"
          value="Suhu Udara"
        >
          Suhu Udara
        </button>
        <button
          class="btn btn-light btn-sm text-black"
          id="b-kelembapan-tanah"
          value="Kelembapan Tanah"
        >
          Kelembapan Tanah
        </button>
        <button
          class="btn btn-light btn-sm text-black"
          id="b-total-penyiraman"
          value="Total Penyiraman"
        >
          Total Penyiraman
        </button>
        <div class="btn-group">
          <button
            type="button"
            class="btn btn-dark dropdown-toggle text-white"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Show by
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Hari</a></li>
            <li><a class="dropdown-item" href="#">Minggu</a></li>
            <li><a class="dropdown-item" href="#">Bulan</a></li>
            <li><a class="dropdown-item" href="#">Tahun</a></li>
          </ul>
        </div>
      </div>
      <div class="card-body chart">
        <h3 class="text-center" id="titleChart">Charts</h3>
        <canvas id="canvas-chart"></canvas>
      </div>
    </div>
  </div>
</div>
<!-- CONTENT END -->
